<h1 class="text-center mb-4">Venta de Productos</h1>

<!-- Formulario de productos -->
<form action="/agregar" method="POST" class="mb-4">
    <div class="mb-3">
        <label for="producto" class="form-label">Seleccionar Producto:</label>
        <select name="productoId" class="form-select" id="producto">
            <% productos.forEach(producto => { %>
                <option value="<%= producto.id %>">
                    <%= producto.nombre %> - $<%= producto.precio %> (Stock: <%= producto.stock %>)
                </option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>

<!-- Tabla de productos en la venta -->
<h2 class="text-center mb-4">Productos en la Venta</h2>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
    </tr>
    </thead>
    <tbody>
    <% venta.forEach(producto => { %>
        <tr>
            <td><%= producto.nombre %></td>
            <td>$<%= producto.precio %></td>
        </tr>
    <% }); %>
    </tbody>
    <tfoot>
    <tr class="table-info">
        <td>Total</td>
        <td>$<%= total %></td>
    </tr>
    </tfoot>
</table>
